<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background"
    android:orientation="vertical"
    tools:context=".SettingActivity">
    <LinearLayout
        android:id="@+id/topNavbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_nav_header_height"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/default_padding_HZ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backBTN"
            android:layout_width="@dimen/navbar_icon_size"
            android:layout_height="@dimen/navbar_icon_size"
            android:onClick="onBackPressed"
            android:background="@color/transparent"
            android:src="@drawable/back_ic" />

        <TextView
            style="@style/TextView.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Setting"
            android:textColor="@color/primary_txt_color"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_padding_HZ"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/setting_margin_bottom"
            android:background="@drawable/custom_cardview"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/default_padding_HZ"
            android:paddingVertical="@dimen/default_padding_HZ">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/setting_tools_icon"
                android:layout_height="@dimen/setting_tools_icon"
                android:src="@drawable/ideas_ic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                style="@style/TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/setting_tools_icon_margin_end"
                android:layout_weight="1"
                android:text="Tip: Type '009988=' to reset password."
                android:textColor="@color/primary_txt_color"
                android:textSize="@dimen/setting_tools_txt_size"
                app:layout_constraintBottom_toTopOf="@+id/textView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                style="@style/TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_round_btn"
                android:backgroundTint="@color/colorPrimary"
                android:paddingHorizontal="@dimen/default_padding_HZ"
                android:paddingVertical="5dp"
                android:visibility="gone"
                android:text="Got it"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:textSize="@dimen/setting_tools_txt_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_cardview"
            android:layout_marginBottom="@dimen/setting_margin_bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/default_padding_HZ"
            android:paddingVertical="@dimen/default_padding_HZ">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="@dimen/setting_tools_icon"
                android:layout_height="@dimen/setting_tools_icon"
                android:src="@drawable/asterisk_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                style="@style/TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/setting_tools_icon_margin_end"
                android:layout_weight="1"
                android:text="Password"
                android:textColor="@color/primary_txt_color"
                android:textSize="@dimen/setting_tools_txt_size"
                app:layout_constraintBottom_toTopOf="@+id/changePassword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/changePassword"
                style="@style/TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_round_btn"
                android:backgroundTint="@color/colorPrimary"
                android:paddingHorizontal="@dimen/default_padding_HZ"
                android:paddingVertical="5dp"
                android:text="Change"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:textSize="@dimen/setting_tools_txt_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/rateUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_round_btn"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            android:layout_marginBottom="@dimen/setting_margin_bottom"
            android:paddingHorizontal="@dimen/default_padding_HZ"
            android:paddingVertical="@dimen/default_padding_HZ">

            <ImageView
                android:layout_width="@dimen/setting_tools_icon"
                android:layout_height="@dimen/setting_tools_icon"
                android:src="@drawable/star_icon"
                android:padding="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/setting_tools_icon_margin_end"
                android:layout_weight="1"
                android:text="Rate us "
                android:textColor="@color/primary_txt_color"
                android:textSize="@dimen/setting_tools_txt_size"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/moreApps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_round_btn"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/setting_margin_bottom"
            android:paddingHorizontal="@dimen/default_padding_HZ"
            android:paddingVertical="@dimen/default_padding_HZ">

            <ImageView
                android:layout_width="@dimen/setting_tools_icon"
                android:layout_height="@dimen/setting_tools_icon"
                android:src="@drawable/android_ic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/setting_tools_icon_margin_end"
                android:layout_weight="1"
                android:text="More Apps"
                android:textColor="@color/primary_txt_color"
                android:textSize="@dimen/setting_tools_txt_size"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/privacyPolicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_round_btn"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/setting_margin_bottom"
            android:paddingHorizontal="@dimen/default_padding_HZ"
            android:paddingVertical="@dimen/default_padding_HZ">

            <ImageView
                android:layout_width="@dimen/setting_tools_icon"
                android:layout_height="@dimen/setting_tools_icon"
                android:src="@drawable/privacy_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/setting_tools_icon_margin_end"
                android:layout_weight="1"
                android:text="Privacy policy"
                android:textColor="@color/primary_txt_color"
                android:textSize="@dimen/setting_tools_txt_size"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_round_btn"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/setting_margin_bottom"
            android:paddingHorizontal="@dimen/default_padding_HZ"
            android:paddingVertical="@dimen/default_padding_HZ">

            <ImageView
                android:layout_width="@dimen/setting_tools_icon"
                android:layout_height="@dimen/setting_tools_icon"
                android:src="@drawable/share_icon"
                android:padding="3dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/setting_tools_icon_margin_end"
                android:layout_weight="1"
                android:text="Share with Friends"
                android:textColor="@color/primary_txt_color"
                android:textSize="@dimen/setting_tools_txt_size"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>