<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/black"
    tools:context=".ViewGalleryItemActivity">

    <LinearLayout
        android:id="@+id/topNavbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_nav_header_height"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/default_padding_HZ"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backBTN"
            android:layout_width="@dimen/navbar_icon_size"
            android:layout_height="@dimen/navbar_icon_size"
            android:background="@color/transparent"
            android:src="@drawable/back_ic" />

        <TextView

            style="@style/TextView.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Demo.jpg"
            android:textColor="@color/primary_txt_color"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/filterItems"
            android:layout_width="@dimen/navbar_icon_size"
            android:layout_height="@dimen/navbar_icon_size"
            android:background="@color/transparent"
            android:src="@drawable/menu_icon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/demo_landscape"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            />
        <VideoView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/demo_landscape"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            />
    </LinearLayout>
    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/player_view"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>