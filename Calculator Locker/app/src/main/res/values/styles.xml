<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/white</item>
        <!--        <item name="android:windowIsFloating">true</item>-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <!--        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>-->
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="background">@color/colorPrimary</item>
    </style>


    <style name="TextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Button" parent="Widget.Material3.Button">
        <item name="android:fontFamily">@font/regular</item>

    </style>

    <style name="TextView.Bold">
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="roundButtonStyle">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:translationZ">@null</item>
    </style>

    <style name="TextView.SemiBold">
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="TextView.Medium">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextView.black">
        <item name="android:fontFamily">@font/black</item>

    </style>

    <style name="TextView.Light">
        <item name="android:fontFamily">@font/light</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>